<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_6"
    android:paddingBottom="@dimen/dp_6"
    android:paddingStart="@dimen/dp_6"
    android:paddingEnd="@dimen/dp_4"
    android:background="?android:attr/selectableItemBackground"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/expandCollapseIndicatorImageView"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:visibility="visible"
        android:padding="@dimen/dp_2"
        tools:src="@drawable/ic_plus"
        app:tint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/attributesTextView"/>

    <TextView
        android:id="@+id/attributesTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_6"
        android:ellipsize="end"
        tools:text="Account Id: 1"
        app:layout_constraintStart_toEndOf="@id/expandCollapseIndicatorImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    
</androidx.constraintlayout.widget.ConstraintLayout>