
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.V21.Theme.Box" parent="Theme.Material3.DayNight.NoActionBar"/>
    <style name="Base.Theme.Box" parent="Base.V21.Theme.Box" />

    <style name="Theme.Box" parent="Base.Theme.Box" />
    
    <style name="Box.TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Box.TextAppearance.Body1.Bold" parent="Box.TextAppearance.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Box.TextAppearance.Toolbar.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Box.TextAppearance.Hint1" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Box.TextAppearance.Profile.Body1" parent="Box.TextAppearance.Body1.Bold">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Box.TextAppearance.Display1" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Box.Button.V1" parent="Widget.Material3.Button" />

    <style name="Box.OutlinedButton.V1" parent="Widget.Material3.Button.OutlinedButton" />

    <style name="DefaultDashboardTileStyle">
        <item name="android:layout_width">@dimen/dp_140</item>
        <item name="android:layout_height">@dimen/dp_90</item>
    </style>

</resources>
